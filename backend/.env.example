# Database Configuration
DATABASE_URL=postgresql://alzheimer_user:alzheimer_pass@localhost:5432/alzheimer_voice_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# S3 Storage Configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=alzheimer-voice-data
S3_REGION=us-east-1

# ML Model Configuration
ML_MODELS_PATH=./models
WHISPER_MODEL_SIZE=base
ENABLE_GPU=false

# Audio Processing
MAX_AUDIO_DURATION_MINUTES=30
AUDIO_SAMPLE_RATE=16000
VAD_AGGRESSIVENESS=2

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Alzheimer Voice Biomarker Platform
VERSION=1.0.0
DESCRIPTION=Research platform for Alzheimer's disease detection using voice biomarkers

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Development
DEBUG=true
RELOAD=true
